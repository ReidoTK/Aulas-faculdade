public class primeirojava {
    public static void main(String[] args) {
        int limite = 500;

        int termoAtual = 0;
        int proximoTermo = 1;

        System.out.print(termoAtual + " " + proximoTermo + " ");

        while (proximoTermo <= limite) {
            int novoTermo = termoAtual + proximoTermo;
            System.out.print(novoTermo + " ");

            termoAtual = proximoTermo;
            proximoTermo = novoTermo;
        }
    }
}
